<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity">

    <ImageView
        android:id="@+id/sign_bg"
        android:layout_width="wrap_content"
        android:layout_height="650dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg" />

    <ImageView
        android:id="@+id/updrink_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="@+id/sign_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sign_bg"
        app:layout_constraintTop_toTopOf="@+id/sign_bg"
        app:layout_constraintVertical_bias="0.58000004"
        app:srcCompat="@drawable/updrink_logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDRINK"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/updrink_logo"
        app:layout_constraintEnd_toEndOf="@id/updrink_logo"
        app:layout_constraintStart_toStartOf="@id/updrink_logo"
        app:layout_constraintTop_toTopOf="@+id/sign_bg"
        app:layout_constraintVertical_bias="0.75" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updrink_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>